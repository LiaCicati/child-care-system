<AnchorPane prefHeight="750.0" prefWidth="414.0" style="-fx-background-color: #E6E1FF;" userData="Register" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RegisterBabysitterViewController">
    <children>
        <ImageView fitHeight="117.0" fitWidth="143.0" layoutX="135.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@resources/kinder.png" />
        </ImageView>
        <Button layoutX="36.0" layoutY="624.0" minHeight="70.0" minWidth="342.0" mnemonicParsing="false" onAction="#onRegister" style="-fx-background-radius: 37; -fx-background-color: #A094E3;" text="Register" textFill="WHITE">
            <font>
                <Font size="16.0" />
            </font>
            <effect>
                <DropShadow color="rgba(82, 67, 154, 0.25);" />
            </effect>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
      <VBox layoutX="43.0" layoutY="129.0" prefHeight="454.0" prefWidth="327.0" spacing="5.0">
         <children>
            <HBox prefHeight="61.0" prefWidth="327.0" spacing="5.0">
               <children>
                  <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="62.0" prefWidth="158.0" spacing="5.0">
                     <children>
                        <Label text="* First Name" />
                        <TextField fx:id="firstName" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="158.0" style="-fx-background-radius: 37;" />
                     </children>
                  </VBox>
                  <VBox minWidth="-Infinity" prefHeight="74.0" prefWidth="158.0" spacing="5.0">
                     <children>
                        <Label text="* Last Name" />
                        <TextField fx:id="lastName" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="157.0" style="-fx-background-radius: 37;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="* Username">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <TextField fx:id="username" prefHeight="30.0" prefWidth="231.0" style="-fx-background-radius: 37;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <Label text="* Email">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <TextField fx:id="email" prefHeight="30.0" prefWidth="231.0" style="-fx-background-radius: 37;">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="* Password" />
            <PasswordField fx:id="password" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="326.0" style="-fx-background-radius: 37;">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </PasswordField>
            <VBox prefHeight="63.0" prefWidth="327.0" spacing="5.0">
               <children>
                  <Label text="* Age" />
                  <DatePicker fx:id="age" />
               </children>
            </VBox>
            <HBox prefHeight="68.0" prefWidth="327.0" spacing="10.0">
               <children>
                  <VBox prefHeight="68.0" prefWidth="151.0" spacing="5.0">
                     <children>
                        <Label text="* Experience" />
                        <TextField fx:id="babysittingExperience" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" style="-fx-background-radius: 37;" />
                     </children>
                  </VBox>
                  <VBox prefHeight="68.0" prefWidth="152.0" spacing="5.0">
                     <children>
                        <Label text="* Payment/hour" />
                        <TextField fx:id="paymentPerHour" prefHeight="30.0" style="-fx-background-radius: 37;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="64.0" prefWidth="327.0" spacing="10.0">
               <children>
                  <VBox prefHeight="95.0" prefWidth="150.0" spacing="5.0">
                     <children>
                        <Label text="* Mother tongue" />
                        <TextField fx:id="motherTongue" prefHeight="30.0" style="-fx-background-radius: 37;" />
                     </children>
                  </VBox>
                  <VBox prefHeight="95.0" prefWidth="154.0" spacing="5.0">
                     <children>
                        <Label text="* First aid certificate" />
                        <RadioButton fx:id="hasCertificate" mnemonicParsing="false" text="yes">
                           <toggleGroup>
                           <ToggleGroup fx:id="groupToggle">

                           </ToggleGroup>
                        </toggleGroup>

                        </RadioButton>
                        <RadioButton fx:id="doNotHaveCertificate" mnemonicParsing="false" text="no" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutX="73.0" layoutY="695.0" prefHeight="39.0" prefWidth="267.0" spacing="5.0">
         <children>
            <Label text="Already have an account?">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Hyperlink onAction="#onLogIn" style="-fx-border-color: transparent; -fx-text-fill: #52439A;" text="Log In">
               <font>
                  <Font size="18.0" />
               </font>
            </Hyperlink>
         </children>
      </HBox>
      <Label fx:id="errorLabel" layoutX="30.0" layoutY="576.0" prefHeight="46.0" prefWidth="350.0" text="The username can not be empty or have more than&#10; 16 charachters&#10;" textFill="#f9494b" />
    </children>
</AnchorPane>
